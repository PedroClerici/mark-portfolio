---
import { Image } from 'astro:assets'
import path from 'node:path'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  icon: ImageMetadata
  percentage: number
}

const { icon, percentage, class: className, ...attrs } = Astro.props

const alt = path.parse(icon.src).name
---

<div class:list={['relative flex flex-col bg-gray-500 rounded-xl p-2 gap-1 hover:cursor-pointer', className]} {...attrs}>
  <div class="flex justify-center items-center p-4 bg-gray-400 rounded-4xl">
    <Image class="size-28 md:size-32" src={icon} alt={alt}/>
  </div>

  <span class="text-2xl text-center font-montserrat font-bold">{percentage}%</span>
</div>